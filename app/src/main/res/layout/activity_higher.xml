<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kotlin 高阶函数"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="10dp"  />

        <Button
            android:id="@+id/btn_higher1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kotlin 高阶函数1"
            android:onClick="onHigher1"
            android:layout_marginTop="10dp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_higher2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kotlin 高阶函数2"
            android:onClick="onHigher2"
            android:layout_marginTop="10dp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_higher3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kotlin 高阶函数2"
            android:onClick="onHigher3"
            android:layout_marginTop="10dp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_higher4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kotlin 高阶函数和扩展函数"
            android:onClick="onHigher4"
            android:layout_marginTop="10dp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_higher5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kotlin 高阶函数的演化过程"
            android:onClick="onHigher5"
            android:layout_marginTop="10dp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_higher6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kotlin 函数引用类型"
            android:onClick="onHigher6"
            android:layout_marginTop="10dp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_higher7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kotlin 模拟android 点击事件"
            android:onClick="onHigher7"
            android:layout_marginTop="10dp"
            android:textAllCaps="false" />
        
    </LinearLayout>

</ScrollView>